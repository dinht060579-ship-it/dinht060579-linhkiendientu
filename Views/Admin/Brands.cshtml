@model List<ElectronicsStore.Models.Brand>
@{
    ViewData["Title"] = "Quản Lý Thương Hiệu";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-award me-2"></i>Quản Lý Thương Hiệu
                    </h4>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBrandModal">
                        <i class="fas fa-plus me-1"></i>Thêm Thương Hiệu
                    </button>
                </div>
                
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên thương hiệu</th>
                                        <th>Mô tả</th>
                                        <th>Số sản phẩm</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var brand in Model)
                                    {
                                        <tr>
                                            <td><strong>#@brand.Id</strong></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(brand.LogoUrl))
                                                    {
                                                        <img src="@brand.LogoUrl" alt="@brand.Name" 
                                                             class="brand-logo me-2" style="width: 40px; height: 40px; object-fit: contain; border-radius: 4px;">
                                                    }
                                                    else
                                                    {
                                                        <div class="brand-placeholder me-2">
                                                            <i class="fas fa-image"></i>
                                                        </div>
                                                    }
                                                    <strong>@brand.Name</strong>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(brand.Description))
                                                {
                                                    <span>@(brand.Description.Length > 50 ? brand.Description.Substring(0, 50) + "..." : brand.Description)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có mô tả</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@brand.ProductCount sản phẩm</span>
                                            </td>
                                            <td>
                                                @if (brand.IsActive)
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Không hoạt động</span>
                                                }
                                            </td>
                                            <td>@brand.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary" 
                                                            data-bs-toggle="modal" data-bs-target="#editBrandModal@(brand.Id)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            onclick="confirmDelete(@brand.Id, '@brand.Name')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-award fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có thương hiệu nào</h5>
                            <p class="text-muted">Hãy thêm thương hiệu đầu tiên cho cửa hàng của bạn</p>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBrandModal">
                                <i class="fas fa-plus me-1"></i>Thêm Thương Hiệu Đầu Tiên
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Brand Modal -->
<div class="modal fade" id="addBrandModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Thương Hiệu Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="@Url.Action("CreateBrand", "Admin")" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="brandName" class="form-label">Tên thương hiệu <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="brandName" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="brandDescription" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="brandDescription" name="Description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="brandWebsite" class="form-label">Website</label>
                        <input type="url" class="form-control" id="brandWebsite" name="Website" placeholder="https://example.com">
                    </div>
                    <div class="mb-3">
                        <label for="brandLogo" class="form-label">Logo</label>
                        <input type="file" class="form-control" id="brandLogo" name="LogoFile" accept="image/*">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="brandIsActive" name="IsActive" checked>
                        <label class="form-check-label" for="brandIsActive">
                            Kích hoạt thương hiệu
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm Thương Hiệu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.brand-placeholder {
    width: 40px;
    height: 40px;
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
}

.brand-logo {
    border: 1px solid #dee2e6;
    background-color: white;
    padding: 2px;
}
</style>

<script>
function confirmDelete(brandId, brandName) {
    if (confirm(`Bạn có chắc chắn muốn xóa thương hiệu "${brandName}"? Thao tác này không thể hoàn tác.`)) {
        // Create a form to submit delete request
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("DeleteBrand", "Admin")';
        
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'id';
        input.value = brandId;
        
        const token = document.createElement('input');
        token.type = 'hidden';
        token.name = '__RequestVerificationToken';
        token.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
        
        form.appendChild(input);
        form.appendChild(token);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
