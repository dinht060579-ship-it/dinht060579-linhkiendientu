@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-ban fa-5x text-danger"></i>
                    </div>
                    <h2 class="text-danger mb-3">Truy cập bị từ chối</h2>
                    <p class="text-muted mb-4">
                        Bạn không có quyền truy cập vào trang này. Vui lòng đăng nhập với tài khoản có quyền phù hợp.
                    </p>
                    
                    @if (!User.Identity!.IsAuthenticated)
                    {
                        <div class="mb-4">
                            <p class="text-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Bạn chưa đăng nhập. Vui lòng đăng nhập để tiếp tục.
                            </p>
                        </div>
                        <div class="d-grid gap-2 d-md-block">
                            <a href="@Url.Action("Login", "Account", new { returnUrl = ViewData["ReturnUrl"] })" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                <i class="fas fa-home me-2"></i>Về trang chủ
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <p class="text-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Tài khoản của bạn không có quyền truy cập vào khu vực này.
                            </p>
                        </div>
                        <div class="d-grid gap-2 d-md-block">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Về trang chủ
                            </a>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>